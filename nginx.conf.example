# Nginx Configuration for loegs.com
# Bu dosyayı /etc/nginx/sites-available/loegs.com olarak kaydedin
# ve /etc/nginx/sites-enabled/loegs.com olarak symlink oluşturun

server {
    listen 80;
    server_name loegs.com www.loegs.com;
    
    # HTTP'den HTTPS'e yönlendirme (SSL sertifikası kurulduktan sonra)
    # return 301 https://$server_name$request_uri;
    
    # SSL sertifikası kurulduktan sonra yukarıdaki satırı aktif edin
    # ve aşağıdaki SSL bloğunu kullanın:
    
    # listen 443 ssl http2;
    # ssl_certificate /etc/letsencrypt/live/loegs.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/loegs.com/privkey.pem;
    # ssl_protocols TLSv1.2 TLSv1.3;
    # ssl_ciphers HIGH:!aNULL:!MD5;
    
    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/rss+xml font/truetype font/opentype application/vnd.ms-fontobject image/svg+xml;
    
    # Client body size limit (file uploads için)
    client_max_body_size 50M;
    
    # Proxy settings
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_cache_bypass $http_upgrade;
    
    # Next.js static files
    location /_next/static {
        alias /path/to/your/project/.next/static;
        add_header Cache-Control "public, max-age=31536000, immutable";
    }
    
    # Public files
    location /public {
        alias /path/to/your/project/public;
        add_header Cache-Control "public, max-age=31536000, immutable";
    }
    
    # Uploads directory
    location /uploads {
        alias /path/to/your/project/public/uploads;
        add_header Cache-Control "public, max-age=3600";
    }
    
    # API routes - no cache
    location /api {
        proxy_pass http://localhost:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        add_header Cache-Control "no-store, no-cache, must-revalidate";
    }
    
    # Admin routes - no cache
    location /admin {
        proxy_pass http://localhost:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        add_header Cache-Control "no-store, no-cache, must-revalidate";
    }
    
    # All other requests
    location / {
        proxy_pass http://localhost:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

